<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/logo3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="-20dp"
        android:layout_marginBottom="-20dp"
        android:src="@mipmap/logo3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Bienvenue !"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        android:text="Avant tout, un peu de blabla..."
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:text="DLAND est une application simple d'utilisation, gratuite et sans pubs. Elle n'a pour but que de vous aider dans vos visites à DisneyLand Paris. Cette application n'est pas une application officelle, se sert de la base de donnée fournie par Disney, a demandé du temps dans sa conception et ses améliorations, et, par conséquent, n'est en aucun cas responsable en cas de problèmes liés aux horaires ou temps d'attente éronés. Ici, vous trouverez tout ce qu'il vous faut pour organiser et passer une journée de rêve à Disneyland Paris!"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:text="En cas de problèmes liés avec l'application et si vous aviez des propositions, suppositions ou idées, merci de nous contacter via la section CONTACT"
        android:textAlignment="center"
        android:textSize="15sp" />

</LinearLayout>